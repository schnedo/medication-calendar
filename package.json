{
  "name": "medication-calendar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cypress:open": "cypress open",
    "dev": "next dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0 && prettier --check .",
    "build": "next build",
    "export": "next export -o docs/",
    "test": "npm run test:e2e",
    "test:e2e": "start-server-and-test start http://localhost:3000/medication-calendar 'cypress run'",
    "start": "next start"
  },
  "dependencies": {
    "@material-ui/core": "4.11.2",
    "@material-ui/icons": "4.11.2",
    "date-fns": "2.16.1",
    "localforage": "1.9.0",
    "next": "10.0.3",
    "next-pwa": "5.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "cypress": "6.2.1",
    "cypress-plugin-snapshots": "1.4.4",
    "cypress-react-unit-test": "4.17.2",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "prettier": "2.2.1",
    "start-server-and-test": "1.11.7",
    "typescript": "4.1.3"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:sonarjs/recommended",
      "plugin:cypress/recommended",
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "cypress/**/*"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "cypress/plugins/index.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ],
    "ignorePatterns": [
      "next.config.js",
      "public/*.js"
    ]
  }
}
