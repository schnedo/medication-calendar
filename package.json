{
  "name": "medication-calendar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cypress:open": "cypress open",
    "dev": "next dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0 && prettier --check .",
    "build": "next build",
    "export": "next export -o docs/",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest lib",
    "test:e2e": "start-server-and-test start http://localhost:3000/medication-calendar 'cypress run'",
    "start": "next start"
  },
  "dependencies": {
    "@material-ui/core": "4.11.2",
    "@material-ui/icons": "4.11.2",
    "date-fns": "2.16.1",
    "localforage": "1.9.0",
    "next": "10.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@babel/preset-react": "7.12.10",
    "@testing-library/react": "11.2.3",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "@userlike/babel-plugin-joke": "2.0.0",
    "@userlike/joke": "2.0.0",
    "cypress": "6.2.1",
    "cypress-plugin-snapshots": "1.4.4",
    "cypress-react-unit-test": "4.17.2",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "start-server-and-test": "1.11.7",
    "typescript": "4.1.3"
  },
  "babel": {
    "plugins": [
      "@userlike/babel-plugin-joke"
    ],
    "presets": [
      "next/babel"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:sonarjs/recommended",
      "plugin:cypress/recommended",
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "lib/**/*"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      },
      {
        "files": [
          "cypress/**/*"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "cypress/plugins/index.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ],
    "ignorePatterns": [
      "next.config.js",
      "public/*.js"
    ]
  }
}
